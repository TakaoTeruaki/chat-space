.chat-main
  .main-header
    .main-header__left-box
      %h1.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list
        ="Member:" + @group.users.pluck(:name).join(", ")
    .main-header__edit-brn
      = link_to edit_group_path(@group) do
        Edit

  .messages
    = render @messages
    %ul.message
      %li.message__upper-info
        %p.message__upper-info__talkr
          takao
        %p.message__upper-info__date
          2020/01/01(Sun) 10:10:10
      %p.message__text
        おはよう！

  .form
    %form.new-message
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon('fas','image')
          %input{type:"file", class: "input-box__image__file"}
      %input{type: "submit",value: "Send", class: "submit-btn",}
  
  
  
